@model CarManager.Core.Dtos.CarDto

<h2>Car Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Brand @Model.Model</h4>
        
        <dl class="row">
            <dt class="col-sm-3">Car ID:</dt>
            <dd class="col-sm-9"><code>@Model.Id</code></dd>
            
            <dt class="col-sm-3">Brand:</dt>
            <dd class="col-sm-9">@Model.Brand</dd>
            
            <dt class="col-sm-3">Model:</dt>
            <dd class="col-sm-9">@Model.Model</dd>
            
            <dt class="col-sm-3">Year:</dt>
            <dd class="col-sm-9">@Model.Year</dd>
            
            <dt class="col-sm-3">Color:</dt>
            <dd class="col-sm-9">@Model.Color</dd>
            
            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9"><strong>€@(Model.Price?.ToString("N2") ?? "0.00")</strong></dd>
            
            <dt class="col-sm-3">Created:</dt>
            <dd class="col-sm-9">@(Model.CreatedAt?.ToString("dd.MM.yyyy HH:mm") ?? "Not set")</dd>
            
            <dt class="col-sm-3">Modified:</dt>
            <dd class="col-sm-9">@(Model.ModifiedAt?.ToString("dd.MM.yyyy HH:mm") ?? "Not set")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>